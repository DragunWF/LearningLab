<html>
  <body>
    {% if name %}
    <h1>Hello {{ name }}</h1>
    {% else %}
    <h1>Hello World</h1>
    {% endif %}
    <h2>Product Count: {{ product_count }}</h2>
    <ul>
      {% for product in products %}
      <li>{{ product }}</li>
      {% endfor %}
    </ul>
    <h2>Tags</h2>
    <ul>
      {% for tag in tags %}
      <li>{{ tag }}</li>
      {% endfor %}
    </ul>
  </body>
</html>
